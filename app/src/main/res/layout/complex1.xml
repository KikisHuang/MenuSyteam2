<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/fenge"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/left_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:layout_toLeftOf="@id/fenge"
        >
        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dish_name"
            />

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/dish_name"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/right_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/fenge"
        android:layout_margin="7dp"
        >
        <ImageView
            android:id="@+id/fenge1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dish_name1"
           />


        <TextView
            android:id="@+id/dish_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish"
            android:textSize="10dp"
            android:layout_above="@+id/fenge1"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textSize="10dp"
            android:layout_above="@+id/fenge1"
            android:layout_toRightOf="@+id/dish_name2"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="35dp"
            />


        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:gravity="center|right"
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/dish_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="10dp"
            android:layout_marginLeft="35dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/dish_name2"

            />

        <ImageView
            android:id="@+id/photo2"
            android:layout_below="@+id/fenge1"
            android:layout_above="@+id/dish_name2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            />

    </RelativeLayout>



</RelativeLayout>